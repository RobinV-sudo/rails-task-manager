<p><%= @task.name %></p>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<a href="http://[::1]:3000/tasks" class="button">Back</a>
<%= link_to "Edit Tasks", edit_path(@task.id) %>

<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
